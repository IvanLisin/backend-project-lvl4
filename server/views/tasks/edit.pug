extends ../layouts/application.pug

block header
  = t('views.tasks.edit.title')

block content
  +formFor()(action=`/tasks/${id}` method='post')
    +input(task, 'name', t('views.tasks.name'), errors)(type='text')
    +textarea(task, 'description', t('views.tasks.description'))
    +select(task, 'statusId', t('views.tasks.status'), statusSelectData)
    +select(task, 'executorId', t('views.tasks.executor'), userSelectData)
    +select(task, 'labelId', t('views.tasks.label'), labelSelectData)('multiple')
    +submit(status, 'patch')(value=t('views.tasks.edit.button'))
