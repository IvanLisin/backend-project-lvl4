extends ../layouts/application.pug

block header
  = t('views.users.title')

block content
  table.table.table-striped
    thead
      tr
        th= t('views.users.id')
        th= t('views.users.fullName')
        th= t('views.users.email')
        th= t('views.users.createdAt')
    tbody
      each user in users
        tr
          td= user.id
          td= user.fullName()
          td= user.email
          td= formatDate(user.createdAt)
          td
            .d-flex.flex-row
              a(href=`/users/${user.id}/edit` class='btn btn-link')= t('views.users.edit.button')
              +buttonTo(`/users/${user.id}`, 'delete')(class='btn btn-link link-danger' value=t('views.users.delete'))
