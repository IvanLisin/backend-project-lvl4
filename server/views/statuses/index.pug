extends ../layouts/application.pug

block header
  = t('views.statuses.title')

block content
  a.btn.btn-primary(href=route('newStatus'))= t('views.statuses.new.button')
  table.table.table-striped
    thead
      tr
        th= t('views.statuses.id')
        th= t('views.statuses.name')
        th= t('views.statuses.createdAt')
    tbody
      each status in statuses
        tr
          td= status.id
          td= status.name
          td= formatDate(status.createdAt)
          td
            .d-flex.flex-row
              a.btn.btn-link(href=`/statuses/${status.id}/edit`)= t('views.statuses.edit.button')
              +buttonTo(`/statuses/${status.id}`, 'delete')(class='btn btn-link link-danger' value=t('views.statuses.delete'))
